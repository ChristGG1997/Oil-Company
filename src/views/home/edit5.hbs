<div class="container p-2 pt-5">
    <div class="row">
        <div class="d-flex mx-auto">
            <div class="card m-2">
                <div class="card-body">
                    <h3>Empresa Extranjera</h3>
                    <form action="/home/edit/clientes/:id" method="POST">
                        <label for="codigo_empresa_cliente" class="pt-4 font-weight-bold">Codigo de la Empresa</label>
                        <div class="form-group">
                            <input type="number" value="{{link5.codigo_empresa_cliente}}" class="form-control" name="codigo_empresa_cliente">
                        </div>
                        <label for="nombre_empresa_cliente" class="font-weight-bold" >Nombre de la Empresa</label>
                        <div class="form-group">
                            <input type="text" value="{{link5.nombre_empresa_cliente}}" class="form-control" name="nombre_empresa_cliente">
                        </div>
                        <label for="fecha_envio" class="pt-4 font-weight-bold">Fecha de Envio</label></br>
                        <label for="fecha_recibido">VALOR ACTUAL : {{link5.fecha_envio}}</label>
                        <div class="form-group">
                            <input type="date" value="{{link5.fecha_envio}}" class="form-control" name="fecha_envio">
                        </div>
                        <label for="fecha_recibido" class="font-weight-bold">Fecha de Entrega</label></br>
                        <label for="fecha_recibido">VALOR ACTUAL : {{link5.fecha_recibido}}</label>
                        <div class="form-group">
                            <input type="date" value="{{link5.fecha_recibido}}" class="form-control" name="fecha_recibido">
                        </div>
                        <label for="tipo_envio" class="font-weight-bold" >Tipo de Envio</label>
                        <select class="form-control" value="{{link5.tipo_envio}}" name="tipo_envio">
                            <option>Entrega Normal</option>
                            <option>Entrega Rapida</option>
                        </select>
                        <div class="form-group p-4">
                            <button class="btn btn-primary btn-block">
                                Guardar
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>